<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td onclick="show_user('<%= user.id %>')" ><p>Show</p></td>
        <td onclick="listpost('<%= user.id %>')" ><p>Listar post</p></td>
        <td onclick="edit_user('<%= user.id %>')" ><p>Editar</p></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>

<div id="show" style="display: none ">
  <p>
    <strong>Name:</strong>
    <p id="name"></p>
  </p>
  <p>
    <strong>Email:</strong>
    <p id="email"></p>
  </p>
</div>

<div id="show_post" style="display: none "></div>

<div id="form_user" style="display: none "></div>